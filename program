import java.util.Scanner;

public class Main {
    public static void main(String[] args) {

        int r ;
        double pi = 3.14;

        Scanner inp = new Scanner(System.in);
        System.out.print("Daireni yarı Çapını giriniz :");
        r = inp.nextInt();
        double merkezaci = (pi * (r*r) * pi) / 360 ;

        System.out.println("Merkez açının ölçüsü :  " +merkezaci );
